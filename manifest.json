{
  "browser_action": {
    "default_popup": "lb-blocker.html",
    "default_title": "Lightbox Blocker 1.0"
  },
  "content_scripts": [
    {
      "js": [
        "content_script.js"
      ],
      "matches": [
        "https://*.facebook.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "This extension can block lightboxes",
  "manifest_version": 2,
  "name": "Lightbox Blocker",
  "version": "1.0"
}